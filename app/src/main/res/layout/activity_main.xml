<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main_panel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <posserldm.doodle.panit.MainPaintView
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tool_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tool_nav_panel"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#80C8CCCB"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tool_nav_paint_tool"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:gravity="center"
                android:text="画笔工具" />

            <TextView
                android:id="@+id/tool_nav_save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:gravity="center"
                android:text="保存" />

            <TextView
                android:id="@+id/tool_nav_introduce"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:gravity="center"
                android:text="导入" />

            <TextView
                android:id="@+id/tool_nav_clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:gravity="center"
                android:text="清除" />

            <TextView
                android:id="@+id/tool_nav_eraser"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:gravity="center"
                android:text="橡皮" />

            <TextView
                android:id="@+id/tool_nav_recall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:gravity="center"
                android:text="撤回" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tool_content"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#D51919"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="工具栏的内容" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>